<div class="author">
    <h1 class="author__heading">Hi, I am Jay Prakash.</h1>
    <p class="author__body">Web Developer & content creater</p>
</div>

<img src="/img/hero-image.png" alt="person looking at the mountains" class="hero-image" width="981" height="700">

<section class="article">
    <h2 class="article__heading">latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older Posts</a>
    <% } %>
    


</section>